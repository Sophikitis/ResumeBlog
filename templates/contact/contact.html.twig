{% extends 'base1.html.twig' %}

{% block title %}Sophikitis | Contact{% endblock %}

{% block body %}
            <div class="content-blocks contact showx">
                <section class="content">
                    {% for message in app.flashes('notice') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>

                    {% endfor %}
                    <div class="block-content">
                        <h3 class="block-title">Get in touch</h3>
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_start(form, {'attr': {'class': 'contact-form', 'id': 'contact-form'} }) }}
                                 <div class="form-control-wrap">
                                        <div id="message" class="alert alert-danger alert-dismissible fade"></div>
                                        <div class="form-group">
                                            {{ form_row(form.name, {'attr': {'class': 'form-control', 'id': 'fname', 'placeholder': 'Name*'}}) }}
{#
                                            <input type="text" class="form-control" id="fname" placeholder="Name*" name="fname">
#}
                                        </div>
                                        <div class="form-group mar-top-40">
                                            {{ form_row(form.email, {'attr': {'class': 'form-control', 'id': 'email', 'placeholder': 'Email*'}}) }}
{#
                                            <input type="email" class="form-control" id="email" placeholder="email*" name="email">
#}
                                        </div>
                                        <div class="form-group mar-top-60">
                                            {{ form_row(form.message, {'attr': {'class': 'form-control', 'id': 'comment', 'placeholder': 'Your Message*', 'rows':'10'}}) }}
{#
                                            <textarea class="form-control" rows="10" name="comment" id="comment" placeholder="Your Message"></textarea>
#}
                                        </div>
                                        <div class="form-group mar-top-40">
                                            <button type="submit" class="btn v7">Send Message</button>
                                        </div>
                                    </div>
                                {{ form_end(form) }}
                            </div>

                            <div class="col-md-5 offset-md-1">

                                <div class="contact-content">
                                    <div class="contact-icon">
                                        <i class="ion-ios-telephone-outline"></i>
                                    </div>
                                    <div class="contact-details">
                                        <h5>Call me</h5>
                                        <p> <a href="tel:+33677896349">+33 - 0677896349</a></p>
                                    </div>
                                </div>
                                <div class="contact-content">
                                    <div class="contact-icon">
                                        <i class="ion-ios-email-outline"></i>
                                    </div>
                                    <div class="contact-details">
                                        <h5>Enquiries</h5>
                                        <p>jeremie.soffichiti@gmail.com</p>
                                    </div>
                                </div>
                            </div>
{#                            <div class="col-md-12">#}
{#                                <!--Google Map-->#}
{#                                <div id="map"></div>#}
{#                                <!--Google Map End-->#}
{#                            </div>#}
                        </div>
                    </div>
                </section>
            </div>
            <div class="content-blocks pop">
                <div id="close-pop" class="close-pop">Close <i class="ion-ios-close-empty"></i></div>
                <section class="content"></section>
            </div>

{% endblock %}